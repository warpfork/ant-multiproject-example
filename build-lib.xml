<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ant-project>
<project name="build-lib"
	xmlns:unless="ant:unless"
	xmlns:if="ant:if"
	>
	<condition property="defines.complete">
		<or>
			<isset property="once.defines"/>
			<isset property="norecurse"/>
		</or>
	</condition>
	<macrodef name="defines">
		<sequential if:set="defines.complete"/>
		<sequential unless:set="defines.complete">
			<property name="once.defines" value="true"/>
			<echo>hullo, please note that the following macrodef declaration takes place exactly once.</echo>
			<macrodef name="lol">
				<sequential>
					<echo>hullo, please note that macrodefs can still be inherited across &lt;ant&gt; calls without redeclaration or overhead.</echo>
				</sequential>
			</macrodef>
		</sequential>
	</macrodef>
	<defines/>
</project>